# ==============================
# SERVER CONFIGURATION
# ==============================

# The port your server will run on (default: 5000)
PORT=5000


# ==============================
# DATABASE CONFIGURATION
# ==============================

# Local MongoDB connection example:
# MONGO_URI=mongodb://127.0.0.1:27017/myDatabase

# Remote MongoDB (Atlas) connection string.
# Replace <username>, <password>, <cluster-url>, and <database-name> with your actual values.
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/<database-name>


# ==============================
# AUTHENTICATION
# ==============================

# Secret key used to sign and verify JSON Web Tokens (JWTs)
JWT_SECRET=your_jwt_secret_here


# ==============================
# CLOUDINARY CONFIGURATION
# ==============================

# Your Cloudinary cloud name (found in your Cloudinary dashboard)
CLOUDINARY_CLOUD_NAME=your_cloud_name

# Your Cloudinary API key
CLOUDINARY_API_KEY=your_cloudinary_api_key

# Your Cloudinary API secret (keep this secure)
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================
# APIFY LOCATIONS CONFIGURATION
# ==============================

# Your Apify API key (used for location data or automation actors)
# APIFY_LOCATIONS_API_KEY=apify_api_your_old_key_here
APIFY_LOCATIONS_API_KEY=apify_api_your_new_key_here

# The Apify actor ID for the Google Places crawler
LOCATION_ACTOR_ID=compass/crawler-google-places
